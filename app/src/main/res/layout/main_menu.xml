<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/cinzel_black"
        android:gravity="center_horizontal"
        android:text="Menu"
        android:textSize="50sp" />

    <EditText
        android:id="@+id/editTextTextMultiLine"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="50sp"
        android:ems="10"
        android:fontFamily="@font/cinzel"
        android:gravity="start|top"
        android:inputType="textMultiLine"
        android:padding="15sp"
        android:text="Select a layout type to view an example.
        The onClick attribute of each button
        will call a method which executes
        setContentView to load the new layout"
        android:textColorHighlight="#000000"
        android:textColorLink="#000000" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight=".7"
            android:fontFamily="@font/cinzel_black"
            android:padding="10dp"
            android:text="Load ConstraintLayout"
            android:textAlignment="viewStart"
            android:textSize="20sp" />

        <Button
            android:id="@+id/button1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight=".3"
            android:backgroundTint="#000000"
            android:onClick="loadConstrainLayout"
            android:padding="10dp"
            android:text="Load"
            android:textSize="14sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="294dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight=".7"
            android:fontFamily="@font/cinzel_black"
            android:padding="10dp"
            android:text="Load TableLayout"
            android:textAlignment="viewStart"
            android:textSize="20sp" />

        <Button
            android:id="@+id/button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight=".3"
            android:backgroundTint="#000000"
            android:onClick="loadTableLayout"
            android:padding="10dp"
            android:text="Load" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <RatingBar
            android:id="@+id/ratingBar2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15sp"
            android:layout_marginTop="75sp"
            android:layout_marginRight="15sp"
            android:layout_weight="1" />
    </LinearLayout>
</LinearLayout>